{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Docker",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      // "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/backend/**/*.js",
        "!**/node_modules/**",
        "${workspaceFolder}/backend/*.js"
      ],
      "localRoot": "${workspaceFolder}/backend",
      "remoteRoot": "/app"
    }
  ]
}
